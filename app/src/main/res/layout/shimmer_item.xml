<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/shimmer_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/shimmer_relative_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"

        >


            <ImageView
                android:id="@+id/shimmer_poster_card"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:background="@color/shimmer_color"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop" />


        <ImageView



            android:background="@color/shimmer_color"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop" />

        <View
            android:layout_toRightOf="@id/shimmer_poster_card"
            android:layout_above="@id/shimmer_text"
            android:layout_marginBottom="4dp"
            android:background="@color/shimmer_color"
            android:layout_width="170dp"
            android:layout_height="25dp"



            />

        <View

            android:id="@+id/shimmer_text"
            android:layout_toRightOf="@id/shimmer_poster_card"
            android:background="@color/shimmer_color"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="25dp"

            />





    </RelativeLayout>

    <View

        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="20dp"
        android:id="@+id/shimmer_overview_one"
        android:layout_below="@id/shimmer_relative_image"
        android:background="@color/shimmer_color"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <View
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/shimmer_overview_one"
        android:id="@+id/shimmer_overview_two"
        android:background="@color/shimmer_color"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <View
        android:layout_marginStart="20dp"
        android:layout_marginEnd="65dp"
        android:id="@+id/shimmer_overview_three"
        android:layout_below="@id/shimmer_overview_two"
        android:background="@color/shimmer_color"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <View
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        android:id="@+id/shimmer_overview_four"
        android:layout_below="@id/shimmer_overview_three"
        android:background="@color/shimmer_color"
        android:layout_width="match_parent"
        android:layout_height="85dp"/>

    <View
        android:layout_marginStart="25dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="30dp"
        android:id="@+id/shimmer_overview_five"
        android:layout_below="@id/shimmer_overview_four"
        android:background="@color/shimmer_color"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comet"
    app:layoutDescription="@xml/activity_detailed_cast_scene"
    tools:context=".DetailedCastActivity">

    <com.google.android.material.appbar.AppBarLayout

        android:id="@+id/cast_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comet"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/cast_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

   <RelativeLayout
       android:id="@+id/cast_detail_top_relative"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="250dp">
       <com.google.android.material.card.MaterialCardView
           android:layout_centerHorizontal="true"
           android:id="@+id/cast_detail_profile_card"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_above="@id/cast_detail_name"
           >

           <ImageView
               android:id="@+id/cast_detail_profile"
               android:layout_width="130dp"
               android:layout_height="200dp"
               android:scaleType="centerCrop"


               tools:srcCompat="@tools:sample/avatars" />
       </com.google.android.material.card.MaterialCardView>


       <TextView
           android:layout_alignParentBottom="true"

           android:layout_centerHorizontal="true"
           android:id="@+id/cast_detail_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:fontFamily="@font/convergence"

           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/cast_detail_profile_card" />
   </RelativeLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cast_shimmer_layout">
        <include layout="@layout/shimmer_cast_detail" android:id="@+id/shimmer_cast_item"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout


        android:id="@+id/info_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cast_detail_top_relative">

        <TextView
            android:id="@+id/cast_detail_born_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:drawablePadding="10dp"
            android:text="Born on -  " />

        <TextView
            android:id="@+id/cast_detail_birth_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/ic_baseline_edit_location_alt_24"
            android:drawablePadding="10dp"
            android:text="Birth of Place -  " />

        <TextView
            android:id="@+id/cast_detail_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/ic_baseline_star_rate_24"
            android:drawablePadding="10dp"
            android:text="Popularity -  " />


    </LinearLayout>

    <ScrollView

        android:fillViewport="true"
        android:paddingBottom="100dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/cast_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_linear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/biography_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:text="Biography"
                android:textSize="17sp"
                android:textStyle="bold" />

            <it.mike5v.viewmoretextview.ViewMoreTextView
                android:id="@+id/cast_detail_biography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/biography_title"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"

                android:fontFamily="sans-serif-smallcaps"
                android:textSize="14sp"
                app:duration="200"
                app:ellipsizeText="View More"
                app:ellipsizeTextColor="#3949AB"
                app:isExpanded="false"
                app:visibleLines="2" />


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>
<?xml version="1.0" encoding="utf-8"?>
<MotionScene

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/movie_detail_relative_image"
               motion:framePosition="50"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/movie_detail_relative_image"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/movie_detail_relative_image"
               motion:framePosition="100"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/movie_detail_relative_image"
               motion:framePosition="100"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/movie_detail_appbar"
               motion:framePosition="100"
               android:alpha="1" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/movie_detail_relative_image"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/movie_detail_relative_image"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/movie_detail_scrollview"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toBottomOf="@+id/movie_detail_relative_image"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="85dp" />
    </ConstraintSet>
</MotionScene>